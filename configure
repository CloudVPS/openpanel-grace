for script in src/*/configure; do
  xpath=`echo "$script" | sed -e "s@/configure\\$@@"`
  oldwd=$(pwd)
  echo "# Configuring $xpath"
  cd "$xpath"
  ./configure $* || exit 1
  cd "$oldwd"
done
